extends ../../form

block inputs
  input(
    class='input-field form-control'
    ng-model='post.title'
    placeholder='Title'
    autofocus
  )

  input(
    class='input-field form-control'
    ng-model='post.imageURL'
    placeholder='Header Image URL'
  )

  textarea(
    ng-model='post.body'
    ui-tinymce='options'
    ng-controller='postForm'
  )

  div(class='tinymce-bottom-margin')
