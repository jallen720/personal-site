h2 {{ formName }}

include errors

input(
  class='post-form-title input-field form-control'
  ng-model='post.title'
  placeholder='Put your post\'s title here...'
)

input(
  class='post-form-image-url input-field form-control'
  ng-model='post.imageURL'
  placeholder='Put your post\'s header image URL here...'
)

textarea(
  class='post-form-body input-field form-control'
  ng-model='post.body'
  placeholder='Write your post here...'
  rows=12
)

button(class='btn left-btn' ng-click='submit()') Submit
