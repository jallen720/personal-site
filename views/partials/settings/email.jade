extends ../form

block header
  h2 Change E-mail
  include ../divider

block inputs
  input(
    class='form-control input-field short-input'
    ng-model='credentials.email'
    placeholder='New E-mail'
  )

  input(
    class='form-control input-field short-input'
    ng-model='credentials.password'
    placeholder='Password'
    type='password'
  )
