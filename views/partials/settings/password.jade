extends ../form

block header
  h2 Change Password
  include ../divider

block inputs
  input(
    class='form-control input-field short-input'
    ng-model='password.original'
    placeholder='Original Password'
    type='password'
  )

  input(
    class='form-control input-field short-input'
    ng-model='password.new'
    placeholder='New Password'
    type='password'
  )

  input(
    class='form-control input-field short-input'
    ng-model='password.confirm'
    placeholder='Confirm Password'
    type='password'
  )
